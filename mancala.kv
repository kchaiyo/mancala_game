#:kivy 1.0.9

<MancalaBoard>:
    canvas:
        Rectangle:
            pos: self.center_x - 400, self.center_y - 100
            size: 80, 200
        Rectangle:
            pos: self.center_x - 290, self.center_y + 20
            size: 80, 80
        Rectangle:
            pos: self.center_x - 190, self.center_y + 20
            size: 80, 80
        Rectangle:
            pos: self.center_x - 90, self.center_y + 20
            size: 80, 80
        Rectangle:
            pos: self.center_x + 10, self.center_y + 20
            size: 80, 80
        Rectangle:
            pos: self.center_x + 110, self.center_y + 20
            size: 80, 80
        Rectangle:
            pos: self.center_x + 210, self.center_y + 20
            size: 80, 80
        Rectangle:
            pos: self.center_x - 290, self.center_y - 100
            size: 80, 80
        Rectangle:
            pos: self.center_x - 190, self.center_y - 100
            size: 80, 80
        Rectangle:
            pos: self.center_x - 90, self.center_y - 100
            size: 80, 80
        Rectangle:
            pos: self.center_x + 10, self.center_y - 100
            size: 80, 80
        Rectangle:
            pos: self.center_x + 110, self.center_y - 100
            size: 80, 80
        Rectangle:
            pos: self.center_x + 210, self.center_y - 100
            size: 80, 80
        Rectangle:
            pos: self.center_x + 320, self.center_y - 100
            size: 80, 200

    Label:
        font_size: 30
        center_x : root.width / 2  - 360
        center_y : root.height / 2
        text: str(root.pit_BS)
        color: [1,0,0,1]

    Label:
        font_size: 30
        center_x : root.width / 2  - 250
        center_y : root.height / 2 + 60
        text: str(root.pit_B6)
        color: [0,0,0,1]

    Label:
        font_size: 30
        center_x : root.width / 2  - 150
        center_y : root.height / 2 + 60
        text: str(root.pit_B5)
        color: [0,0,0,1]

    Label:
        font_size: 30
        center_x : root.width / 2  - 50
        center_y : root.height / 2 + 60
        text: str(root.pit_B4)
        color: [0,0,0,1]

    Label:
        font_size: 30
        center_x : root.width / 2  + 50
        center_y : root.height / 2 + 60
        text: str(root.pit_B3)
        color: [0,0,0,1]

    Label:
        font_size: 30
        center_x : root.width / 2  + 150
        center_y : root.height / 2 + 60
        text: str(root.pit_B2)
        color: [0,0,0,1]

    Label:
        font_size: 30
        center_x : root.width / 2  + 250
        center_y : root.height / 2 + 60
        text: str(root.pit_B1)
        color: [0,0,0,1]

    Label:
        font_size: 30
        center_x : root.width / 2  + 360
        center_y : root.height / 2
        text: str(root.pit_AS)
        color: [0,0,1,1]

    Label:
        font_size: 30
        center_x : root.width / 2  - 250
        center_y : root.height / 2 - 60
        text: str(root.pit_A1)
        color: [0,0,0,1]

    Label:
        font_size: 30
        center_x : root.width / 2  - 150
        center_y : root.height / 2 - 60
        text: str(root.pit_A2)
        color: [0,0,0,1]

    Label:
        font_size: 30
        center_x : root.width / 2  - 50
        center_y : root.height / 2 - 60
        text: str(root.pit_A3)
        color: [0,0,0,1]

    Label:
        font_size: 30
        center_x : root.width / 2  + 50
        center_y : root.height / 2 - 60
        text: str(root.pit_A4)
        color: [0,0,0,1]

    Label:
        font_size: 30
        center_x : root.width / 2  + 150
        center_y : root.height / 2 - 60
        text: str(root.pit_A5)
        color: [0,0,0,1]

    Label:
        font_size: 30
        center_x : root.width / 2  + 250
        center_y : root.height / 2 - 60
        text: str(root.pit_A6)
        color: [0,0,0,1]

    Label:
        font_size: 30
        top : root.top - 100
        center_x: 150
        text: 'Stones in hand:'
        color: [1,1,1,1]

    Label:
        font_size: 30
        top : root.top - 100
        center_x: 300
        text: str(root.hand)
        color: [1,1,1,1]

    Label:
        font_size: 30
        top : root.top - 100
        center_x: root.width - 220
        text: "Current Player:"
        color: [1,1,1,1]

    Label:
        font_size: 30
        top : root.top - 100
        center_x: root.width - 70
        text: "P" + str(root.current_player)
        color: [1,1,1,1]
